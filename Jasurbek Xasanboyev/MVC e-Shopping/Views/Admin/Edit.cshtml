@model e_Shopping.Data.Models.Client

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/StyleSheet1.css" />
    <title>Edit</title>
</head>
<body>

<h4>Client</h4>
<hr />
@using (Html.BeginForm("Save", "Admin", FormMethod.Post))
{
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="INN" class="control-label"></label>
                <input asp-for="INN" class="form-control" />
                <span asp-validation-for="INN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group radio-status">
                    @{ List<SelectListItem>
                            listItem = new List<SelectListItem>();
                        listItem.Add(new SelectListItem
                        {
                            Text = "Yuridik",
                            Value = "Yuridik"
                        });
                        listItem.Add(new SelectListItem
                        {
                            Text = "Jismoniy",
                            Value = "Jismoniy",
                        });
                    }
                    @Html.DropDownListFor(model => model.Status, listItem)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "Andijon",
                        Value = "Andijon"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Buxoro",
                        Value = "Buxoro",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Jizzax",
                        Value = "Jizzax",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Xorazm",
                        Value = "Xorazm",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Namangan",
                        Value = "Namangan",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Navoiy",
                        Value = "Navoiy",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Qashqadaryo",
                        Value = "Qashqadaryo",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Qoraqalpog'iston",
                        Value = "Qoraqalpog'iston",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Samarqand",
                        Value = "Samarqand",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Sirdaryo",
                        Value = "Sirdaryo",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Farg'ona",
                        Value = "Farg'ona"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Surxondaryo",
                        Value = "Surxondaryo"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Toshkent viloyati",
                        Value = "Toshkent viloyati"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Toshkent shahri",
                        Value = "Toshkent shahri"
                    });

                }

                @Html.DropDownListFor(model => model.Region, listItems, "-- Viloyatni tanlang --")
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
