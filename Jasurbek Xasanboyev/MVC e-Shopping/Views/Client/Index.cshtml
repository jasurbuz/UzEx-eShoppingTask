@model e_Shopping.Services.DTOs.Client.ClientForCreationDto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous" />
    @*<link rel="stylesheet" href="~/css/reg.css" />*@
</head>
<body>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="INN" class="control-label"></label>
                <input asp-for="INN" class="form-control" />
                <span asp-validation-for="INN" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.RadioButtonFor(model => model.Status, "Yuridik", false)@Html.Label("Yuridik")
                @Html.RadioButtonFor(model => model.Status, "Jismoniy", false)@Html.Label("Jismoniy")
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "Andijon",
                        Value = "Andijon"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Buxoro",
                        Value = "Buxoro",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Jizzax",
                        Value = "Jizzax",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Xorazm",
                        Value = "Xorazm",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Namangan",
                        Value = "Namangan",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Navoiy",
                        Value = "Navoiy",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Qashqadaryo",
                        Value = "Qashqadaryo",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Qoraqalpog'iston",
                        Value = "Qoraqalpog'iston",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Samarqand",
                        Value = "Samarqand",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Sirdaryo",
                        Value = "Sirdaryo",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Farg'ona",
                        Value = "Farg'ona"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Surxondaryo",
                        Value = "Surxondaryo"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Toshkent viloyati",
                        Value = "Toshkent viloyati"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Toshkent shahri",
                        Value = "Toshkent shahri"
                    });

                }

                @Html.DropDownListFor(model => model.Region, listItems, "-- Viloyatni tanlang --")
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
